# COLORS
W="\e[0m"
R="\e[31m"
G="\e[32m"
Y="\e[33m"
B="\e[34m"
dirPATH="${PREFIX}/var/apktool/"

if [[ -e $dirPATH/$(basename $0).jar ]]
then
  exec $(command -v java) -jar $dirPATH/$(basename $0).jar ${@:1}
else
  echo -en $R"E:$W $(basename $0) PATH missing ...$Y Aborting.$W"
  exit 1
fi 
